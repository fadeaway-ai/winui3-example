<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="WinUIExample.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <Grid Grid.Row="0" Padding="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Click="BackButton_Click"
                    Margin="0,0,4,0"
                    ToolTipService.ToolTip="Go Back">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72B;" FontSize="14"/>
            </Button>

            <!-- Forward Button -->
            <Button x:Name="ForwardButton"
                    Grid.Column="1"
                    Click="ForwardButton_Click"
                    Margin="0,0,4,0"
                    ToolTipService.ToolTip="Go Forward">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72A;" FontSize="14"/>
            </Button>

            <!-- Refresh Button -->
            <Button x:Name="RefreshButton"
                    Grid.Column="2"
                    Click="RefreshButton_Click"
                    Margin="0,0,8,0"
                    ToolTipService.ToolTip="Refresh">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72C;" FontSize="14"/>
            </Button>

            <!-- Address Bar -->
            <TextBox x:Name="AddressBar"
                     Grid.Column="3"
                     PlaceholderText="Enter URL..."
                     KeyDown="AddressBar_KeyDown"
                     VerticalAlignment="Center"/>

            <!-- Go Button -->
            <Button x:Name="GoButton"
                    Grid.Column="4"
                    Click="GoButton_Click"
                    Margin="8,0,0,0"
                    ToolTipService.ToolTip="Go">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE76C;" FontSize="14"/>
            </Button>
        </Grid>

        <!-- WebView2 Browser -->
        <Border Grid.Row="1" BorderBrush="Red" BorderThickness="2" Background="LightBlue">
            <WebView2 x:Name="BrowserView"
                      MinHeight="400"/>
        </Border>
    </Grid>
</Page>
